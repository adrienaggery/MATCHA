<div class="row" id="signup">
	<div class="col-xs-12">
		<div class="col-md-offset-2 col-md-8">

			<div class="text-center">
				<h1>Sign Up</h1>
				<hr/>
				<h2>Are you ready to find Love ?</h2>
				<p>
					There we go !<br />
					Just complete the fileds below to create a new account and enjoy the full access site.
				</p>
			</div>

			<form method="post" class="form-horizontal" action="/signup">

				<!-- city -->
				<input type="hidden" name="city" class="city">

				<!-- postal -->
				<input type="hidden" name="postal" class="postal">

				<div class="form-group">	<!-- name -->
					<label for="name" class="col-xs-12 col-sm-offset-2 col-sm-2 col-md-offset-3 col-md-3 control-label">
						<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						Nom
					</label>

					<div class="col-xs-12 col-sm-6">
						<input name="name" id="name" type="text" >
					</div>
				</div>	<!-- end name -->

				<div class="form-group">	<!-- first-name -->
					<label for="firstName" class="col-xs-12 col-sm-offset-2 col-sm-2 col-md-offset-3 col-md-3 control-label">
						<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						Pr√©nom
					</label>

					<div class="col-xs-12 col-sm-6">
						<input name="firstName" id="firstName" type="text" >
					</div>
				</div>	<!-- end first-name -->

				<div class="form-group"> <!-- email -->
					<label for="email" class="col-xs-12 col-sm-offset-2 col-sm-2 col-md-offset-3 col-md-3 control-label">
						<span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
						E-mail
					</label>

					<div class="col-xs-12 col-sm-6">
						<input name="email" id="email" type="text" >
					</div>
				</div>	<!-- end email -->

				<div class="form-group"> <!-- login -->
					<label for="login" class="col-xs-12 col-sm-offset-2 col-sm-2 col-md-offset-3 col-md-3 control-label">
						<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
						Login
					</label>

					<div class="col-xs-12 col-sm-6">
						<input name="login" id="login" type="text" >
					</div>
				</div>	<!-- end login -->

				<div class="form-group"> <!-- password -->
					<label for="password" class="col-xs-12 col-sm-offset-2 col-sm-2 col-md-offset-3 col-md-3 control-label">
						<span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
						Mot de passe
					</label>

					<div class="col-xs-12 col-sm-6">
						<input name="password" id="password" type="password" >
					</div>
					<div class="col-xs-12 col-sm-2 col-md-3">
						<strong><span id="helpPassword"></span></strong>
					</div>
				</div>	<!-- end password -->

				<input type="submit" id="signup-button" value="Sign up" class="center-block">
			</form>

		</div>
	</div>
</div>
