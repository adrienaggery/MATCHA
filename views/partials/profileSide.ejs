<div class="profile-sidebar">
	<!-- SIDEBAR USERPIC -->
	<div class="profile-userpic" id="profile-userpic">
	
		<% if (profilePic) { %>
			<img src="<%= profilePic %>" class="img-responsive" alt="">
		<% } else { %>
			<img src="http://www.le-lab.info/cdac/sites/le-lab.info.cdac/files/ane_4.jpg" class="img-responsive" alt="">
		<% } %>
	</div>
	<!-- END SIDEBAR USERPIC -->
	<!-- SIDEBAR USER TITLE -->
	<div class="profile-usertitle">
		<div class="profile-usertitle-name" id="login"><%= user.login %></div>
		<div class="profile-usertitle-job">
			<span>Score de popularit√© : </span> <!-- (like / nbr de vue) x 100 -->
		</div>
	</div>
